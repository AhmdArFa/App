<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_context_menu_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/context_menu"
        android:textSize="@dimen/_30ssp"
        android:layout_margin="@dimen/_20sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/et_email_main_activity"/>



    <Button
        android:id="@+id/btn_open_dialoge_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Dialog"/>

    <Button
        android:id="@+id/btn_pop_up_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="open pop up menu"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Sign Up"
        android:textSize="@dimen/_30ssp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continer_fragment"/>

</LinearLayout>